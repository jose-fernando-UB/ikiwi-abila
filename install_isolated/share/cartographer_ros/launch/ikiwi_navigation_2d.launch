<launch>
<!-- Arguments -->
  <arg name="map_file" default="/home/ikiwi/Desktop/pasillo.bag.pbstream"/>

<!-- Map server 
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/> -->

  <node name="cartographer_node" pkg="cartographer_ros"
      type="cartographer_node" args="
          -configuration_directory $(find cartographer_ros)/configuration_files
          -configuration_basename ikiwi_navigation_2d.lua
          -load_state_filename $(arg map_file)
          -collect_metrics"
      output="screen">
  </node>

  <node name="cartographer_occupancy_grid_node" pkg="cartographer_ros"
      type="cartographer_occupancy_grid_node" args="-resolution 0.05" />

  <node name="rviz" pkg="rviz" type="rviz" required="true"
      args="-d $(find cartographer_ros)/configuration_files/ikiwi_abila_navigation.rviz" />
</launch>

